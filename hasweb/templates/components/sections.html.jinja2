{% macro event_header(event=None) %}
    {% if event.logo %}
        <section class="hero is-halfheight is-bold">
            <div class="hero-body">
                <div class="container has-text-centered">
                    {% if event.logo.image_url %}
                        <figure class="image is-centered">
                            <img src="{{ event.logo.image_url }}"
                                 style="max-height: {% if event.logo.has_title %}16{% else %}12{% endif %}rem;width: auto; display: inline-block;">
                        </figure>
                    {% endif %}
                    {% if event.logo.has_title %}
                    {% else %}
                        <h1 class="title">
                            {{ event.title }}
                        </h1>
                    {% endif %}
                    {% if event.subtitle %}
                        <h2 class="subtitle">
                            {{ event.subtitle }}
                        </h2>
                    {% endif %}
                    <h3 class="subtitle is-6">{{ event.datelocation }}</h3>

                    <div class="block">
                        {% if event.boxoffice_item_collection %}
                            {% if event.boxoffice_item_collection_sold_out == true %}
                                <a class="button is-primary" data-href="#tickets" disabled>Buy Tickets(sold out)</a>
                            {% else %}
                                <a class="button is-primary" data-href="#tickets">Buy Tickets</a>
                            {% endif %}
                        {% endif %}
                        {% if event.schedule %}
                            <a class="button is-primary" data-href="#schedule">View Schedule</a>
                        {% endif %}
                        {% if event.funnel.open == true %}
                            <a class="button is-primary" href="{{ event.funnel.url }}" target="_blank">Propose a
                                talk</a>
                        {% endif %}
                    </div>
                    {% if event.live %}
                        <div class="block">
                            <a class="button is-info" href="{{ site.url }}{{ site.baseurl }}/live"><span class="icon"><i
                                    class="fa fa-video-camera"
                                    aria-hidden="true"></i></span><span>Watch the live stream</span></a>
                        </div>
                    {% endif %}

                </div>
            </div>
        </section>
    {% else %}
        <section class="hero is-halfheight is-primary is-bold">
            <div class="hero-body">
                <div class="container has-text-centered">
                    <h1 class="title">
                        {{ event.title }}
                    </h1>
                    {% if event.subtitle %}
                        <h2 class="subtitle">
                            {{ event.subtitle }}
                        </h2>
                    {% endif %}
                    <h3 class="subtitle is-6">{{ event.datelocation }}</h3>

                    <div class="block">
                        {% if event.boxoffice_item_collection %}
                            <a class="button" href="#tickets" data-href="#tickets">Buy Tickets</a>
                        {% endif %}
                        {% if event.funnel == true and event.funnel.open == true %}
                            <a class="button" href="{{ event.funnel.url }}" target="_blank">Propose a talk</a>
                        {% endif %}
                    </div>
                    {% if event.live %}
                        <div class="block">
                            <a class="button" href="{{ site.url }}{{ site.baseurl }}/live"><span class="icon"><i
                                    class="fa fa-video-camera"
                                    aria-hidden="true"></i></span><span>Watch the live stream</span></a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>
    {% endif %}

{% endmacro %}

